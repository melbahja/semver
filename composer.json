    "description": "PHP Semantic Versioning Parser and Comparator",
    "keywords": ["parser", "comparator", "php7", "semver", "version", "version compare"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mohamed ELbahja",
            "email": "mohamed@elbahja.me",
            "homepage": "https://elbahja.me",
            "role": "Developer"
        }
